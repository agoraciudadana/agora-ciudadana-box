#!/bin/bash

cd /tmp
wget http://nodejs.org/dist/v0.10.25/node-v0.10.25.tar.gz
sum=$(sha256sum node-v0.10.25.tar.gz)
if [ ! "$sum" == "46eef3b9d5475a2081dc2b2f7cf1f4c3a56824d1fc9b04e7ed1d7a88e8f6b36f  node-v0.10.25.tar.gz" ]
then
    echo "invalid node hash!"
    rm -rf node-v0.10.25.tar.gz
    exit 1
fi

tar zxf node-v0.10.25.tar.gz
cd node-v0.10.25
make
make install
cd ..
rm -rf node-v0.10.25 node-v0.10.25.tar.gz
